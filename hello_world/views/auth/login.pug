extends ../layout/header

block header   
    
    h1 Login page

    if errors
        each error in errors 
            .alert.alert-danger= error

    form(action="/auth/login" method="POST")
        .form-group
            label Email: 
            input(type="text" name="email", value=values?values.email : '')
        .form-group
            label Password: 
            input(type="password" name="password", value=values?values.password : '')
        button(class="btn btn-primary ml-2") Login
extends ../layout/header

block header   
    
    h1 Create new user

    if errors
        each error in errors 
            .alert.alert-danger= error

    form(action="/users/create" method="POST" enctype="multipart/form-data")
        .form-group
            label Name: 
            input(type="text" name="name", value=values?values.name : '')
        .form-group
            label Phone: 
            input(type="text" name="phone", value=values?values.phone : '')
        .form-group
            label Phone: 
            input#avatar.form-control-file(type="file" name="avatar")
        button(class="btn btn-primary ml-2") Create
extends ../layout/header

block header

    h1 Users list
    a(href="/users/create") Create user
    form(action="/users/search", method="GET")
        input(type="text" name="q")
        button(class="btn btn-primary ml-2") Search

    ul
        each user in users
            li= user.name
            a(href="/users/"+ user.id) View detail

